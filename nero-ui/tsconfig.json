{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],

    "noEmit": true,
    "isolatedModules": true,
    "sourceMap": true,

    "allowJs": true,
    "checkJs": true,

    "esModuleInterop": true,
    "useDefineForClassFields": true,

    "noUncheckedSideEffectImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte", "vite.config.ts"]
}
