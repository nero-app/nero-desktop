{
  "name": "nero",
  "private": true,
  "workspaces": [
    "crates/plugin-extensions",
    "nero-ui"
  ],
  "scripts": {
    "dev": "bun run dev:plugin & bun run dev:ui",
    "dev:plugin": "bun --filter @nero/plugin-extensions dev",
    "dev:ui": "bun --filter nero-ui dev",
    "build": "bun run build:plugin && bun run build:ui",
    "build:plugin": "bun --filter @nero/plugin-extensions build",
    "build:ui": "bun --filter nero-ui build"
  },
  "dependencies": {
    "@tauri-apps/api": "2.5.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "6.0.0",
    "prettier": "3.7.4",
    "prettier-plugin-classnames": "0.8.6",
    "prettier-plugin-merge": "0.8.0",
    "prettier-plugin-svelte": "3.4.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "typescript": "5.7.2"
  }
}
